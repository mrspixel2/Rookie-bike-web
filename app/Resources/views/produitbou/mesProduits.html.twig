{% extends 'base.html.twig' %}

{% block body %}
    <section class="default-page">
        <div class="container">
            <div class="tz-register">
                <h1>Liste de votre Produits</h1>


                <table class="table table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Description</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Image</th>
                        <th scope="col">Categorie</th>
                        <th scope="col">Action</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for produit in produits %}

                        <tr>

                            <td>{{produit.nom }}</td>
                            <td>{{ produit.description }}</td>
                            <td>{{ produit.prix }}</td>
                            <td><img src="{{ asset('images/'~produit.image) }} " width="60px" height="50px" /> </td>
                            <td>{{produit.categorie}}</td>
                            <td>
                                <a  class="btn btn-outline-dark" href="{{ path('produitbou_edit', { 'id': produit.id }) }}">Edit</a><br>
                                <a class="btn btn-outline-danger"  href="{{ path('produitbou_delete', { 'id': produit.id }) }}"> Delete </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div style="display: flex;justify-content: space-around;">

                    <a href="{{ path('produitbou_new') }}" style=" width: 50%">
                        <button type="button" class="btn btn-success " style=" width:100%;margin: 10px 0;" > Ajouter Nouveau Produit</button>
                    </a>
                </div>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(produits) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
