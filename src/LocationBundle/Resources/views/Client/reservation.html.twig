{% extends "::base.html.twig" %}

{% block title %}<meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>{% endblock %}

{% block body %}
   <div class="container">
<div style="width: 100%;">
   <div style="float:left; width: 50%">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Locations</li>
                <li class="breadcrumb-item active"><a href="{{ path('velo_index') }}">Velos</a></li>
            </ol>
        </div>
       
    </div>
    <div class="row">
        <!-- Column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="">Velo à louer</h3>
                    <h2 class="m-t-40">Prix :  {{velo.prix}}<small class="text-success"> DT  / H </small></h2>
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6">
                            <div class="white-box text-center"> <img src="{{ asset('images/'~velo.image) }}" class="img-responsive"> </div>
                        </div>
                        <div class="col-lg-9 col-md-9 col-sm-6">
                            <h4 class="box-title m-t-40">Matricule :</h4>
                            <p>{{ velo.matricule}}</p>
                            {% if velo.etat == 1                                    %}

                                <p> Disponible à {{  velo.idPoint.nom}}</p>
                            {% else %}
                                <p> Non Disponible</p>

                            {% endif %}

                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <h3 class="box-title m-t-40">Informations Générales</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <td width="390">Velo Id</td>
                                        <td>{{ velo.id  }} </td>
                                    </tr>
                                    <tr>
                                        <td width="390">Modele</td>
                                        <td>{{ velo.model }} </td>
                                    </tr>
                                    <tr>
                                        <td> Constructeur</td>
                                        <td> {{ velo.constructeur }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prix par Heure</td>
                                        <td>{{velo.prix}} </td>
                                    </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>
</div>    
</div>
   <div style="float:right;width:50%;  padding-top: 10%;  padding-left: 2%;">

    <div class="row">

        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ajouter Votre Réservation</h4>
                    <form method="post"  enctype="multipart/form-data">
                        {{ form_start(form) }}

                            <input value="{{velo.id}}" class="form-control"   type="hidden" id="vel" name="vel" >
                      
                        <div class="form-group ">
                            <label for="num"  class="control-label">matricule</label>
                            <input value="{{velo.matricule}}" class="form-control"   type="text" id="" name="" >
                        </div>
                        <div class="form-group ">
                            <label for="num"  class="control-label">Date debut</label>
                            <input class="form-control"   type="datetime-local" id="datel" name="datel" min="{{ "now"|date("m/d/Y") }}" max="2021-06-14T00:00"required>
                        </div>
                        <div class="form-group ">
                            <label for="num"  class="control-label">Date fin</label>
                            <input class="form-control"   type="datetime-local" id="datef" name="datef"  min="2020-04-07T00:00" max="2021-06-14T00:00"required>
                        </div>


                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>Ajouter</button>
                            <a type="button" class="btn btn-secondary" href="{{ path('location_index') }}">Annuler</a>
                        </div>
                        {{ form_end (form) }}
                    </form>
                </div>
            </div>
        </div>
    </div></div></div>
        </div>        </div>
        </div>

    </div>
{% endblock %}

